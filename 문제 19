def is_valid_schedule(schedule, constraints):
    for constraint in constraints:
        if constraint[0] in schedule and constraint[1] in schedule:
            if abs(schedule.index(constraint[0]) - schedule.index(constraint[1])) == 1:
                return False
    return True

